<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grapgbg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ractbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="16dp"
        android:text="Rectangular chart"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/piebtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="48dp"

        android:text="Pie chart"

        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="@+id/ractbtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ractbtn"
        app:layout_constraintTop_toBottomOf="@+id/ractbtn">

    </Button>

    <Button
        android:id="@+id/linetbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="line chart"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="@+id/piebtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/piebtn"
        app:layout_constraintTop_toBottomOf="@+id/piebtn">


    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>